<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/cc"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الوعي الفكري"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="53sp"
            android:textColor="	#2b1d0e"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.175" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:onClick="GoToShbhat"
            android:text="شبهات"
            android:textColor="#2b1d0e"
            android:layout_width="280dp"
            android:layout_height="77dp"
            android:background="@drawable/block"
            android:textStyle="bold"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.407"/>
    <Button
            android:onClick="GoToBooks"

            android:textStyle="bold"
            android:textSize="35sp"
            android:text="كتب"
            android:textColor="#2b1d0e"

            android:layout_width="280dp"
            android:layout_height="81dp"
            android:background="@drawable/block"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/button5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.568"/>
    <Button
            android:onClick="GoToQuestions"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="تساؤلات"
            android:layout_width="280dp"
            android:textColor="#2b1d0e"
            android:layout_height="78dp"
            android:background="@drawable/block"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.738"/>
    <Button
            android:onClick="GoToAsk"
            android:layout_width="276dp"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="#2b1d0e"
            android:layout_height="78dp"
            android:background="@drawable/block"
            android:text="تواصل مع واعي"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/button6"
            app:layout_constraintVertical_bias="0.895"
            app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>